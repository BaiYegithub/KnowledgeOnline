<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_titleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/titlebarbg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">


        <ImageView
            android:id="@+id/iv_back_titlebar"
            style="@style/iv_back_style"/>

        <TextView
            android:id="@+id/tv_center_titlebar"
            style="@style/tv_center_title"/>

        <TextView
            android:id="@+id/tv_right_titlebar"
            style="@style/tv_right_title"/>
    </RelativeLayout>
</RelativeLayout>