<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.activity.HeadImgSetActivity">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_preview_acHeadImgSet"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:scaleType="centerCrop"
                android:src="@drawable/headimg_default" />

            <TextView
                android:id="@+id/tv_album_acHeadImgSet"
                style="@style/roundbg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="从相册选一张"
                android:textColor="@color/colorMainText_select"
                android:textSize="@dimen/textSize_sixteen" />

            <TextView
                android:id="@+id/tv_take_photo_acHeadImgSet"
                style="@style/roundbg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="拍一张照片"
                android:textColor="@color/colorMainText_select"
                android:textSize="@dimen/textSize_sixteen" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
