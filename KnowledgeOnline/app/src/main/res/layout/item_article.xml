<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_author_item_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白叶"
            android:textColor="@color/secBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tagsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="公众号/白叶"
            android:textColor="@color/secBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_title_item_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_author_item_article"
            android:layout_marginTop="5dp"
            android:text="我们经常用的"
            android:textColor="@color/firstBlack"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_collect_item_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_item_article"
            android:layout_marginTop="5dp"
            android:src="@drawable/iv_collect"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_time_item_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_item_article"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_collect_item_article"
            android:text="日期"
            android:textColor="@color/firstBlack"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginRight="-67dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="删除"
        android:textColor="@color/colorMainText_select"
        android:textSize="16sp" />
</LinearLayout>
